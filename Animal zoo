class Periodo:
    def __init__(self, especie, periodo_gestacion, region_origen, numero_jaula):
        self.especie = especie
        self.periodo_gestacion = periodo_gestacion
        self.region_origen = region_origen
        self.numero_jaula = numero_jaula

# Solicitar al usuario los datos del animal
especie = input("Ingrese la especie del animal: ")
periodo_gestacion = int(input("Ingrese el periodo de gestación en meses: "))
region_origen = input("Ingrese la región de origen del animal: ")
numero_jaula = int(input("Ingrese el número de jaula del animal: "))

# Crear una instancia de la clase Periodo con los datos ingresados por el usuario
animal = Periodo(especie, periodo_gestacion, region_origen, numero_jaula)

# Mostrar los datos del animal al usuario
print("\nDatos del animal:")
print("Especie:", animal.especie)
print("Periodo de gestación:", animal.periodo_gestacion, "meses")
print("Región de origen:", animal.region_origen)
print("Número de jaula:", animal.numero_jaula)